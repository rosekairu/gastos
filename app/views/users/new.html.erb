<header class="header">
  <nav class="header-nav group">

    <h1 class="header-logo">
      <a href="#"><img class="citrus-logo" src="<%= asset_path('citrus.png') %>" alt="" /></a>
    </h1>

    <ul class="header-list group">
      <li>
        <a href="<%= new_user_url %>" class="header-list-bold">Sign up</a>
      </li>
      <li><a href="<%= new_session_url %>">Log in</a></li>
    </ul>

  </nav>
</header>

<main class="content group">
  <section class="content-main">

    <h1 class="main-header">See all your finances in one place & create a budget</h1>

    <% if flash[:errors] %>
      <p class="errors" ><%= flash[:errors].join("<br>").html_safe %> </p>
    <% end%>

    <form class="form group" action="<%= user_url %>" method="post">
      <input type="hidden"
        name="authenticity_token"
        id=""
        value="<%= form_authenticity_token %>">
 
      <fieldset class="form-fieldset">

        <div class="input">
          <label for="form-email">Your Email</label>
          <input id="form-email" type="text" name="user[email]" value="<%= @user.email %>">
        </div>

        <div class="input">
          <label for="form-password">Password</label>
          <input id="form-password" type="password" name="user[password]" value="<%= @user.password %>">
        </div>

        <div class="submit">
          <button>SIGN UP</button>
        </div>
  </section>

  <section class="content-sidebar">

    <h1 class="sidebar-header">
      Why you'll love it
    </h1>

    <ul class="sidebar-list">
      <li>See all your accounts in one place</li>
      <li>Set a budget and pay down your debt</li>
      <li>Find the best ways to grow your money</li>
      <li>Stay safe and secure</li>
    </ul>
  </section>
</main>
